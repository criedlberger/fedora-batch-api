<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="true"/>
		<param name="File" value="/usr/share/tomcat6/logs/era.log"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p - %C{1}.%M(%L): %m%n"/>
		</layout>
	</appender>
	<appender name="STRIPES" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="false"/>
		<param name="File" value="/usr/share/tomcat6/logs/stripes.log"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p - %C{1}.%M(%L): %m%n"/>
		</layout>
	</appender>
	<appender name="SPRING" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="false"/>
		<param name="File" value="/usr/share/tomcat6/logs/spring.log"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p - %C{1}.%M(%L): %m%n"/>
		</layout>
	</appender>
	<logger name="ca.ualberta.library.ir">
		<level value="INFO"/>
		<appender-ref ref="FILE"/>
	</logger>
	<logger name="net.sourceforge.stripes">
		<level value="ERROR"/>
		<appender-ref ref="STRIPES"/>
	</logger>
	<logger name="org.springframework">
		<level value="ERROR"/>
		<appender-ref ref="SPRING"/>
	</logger>
</log4j:configuration>
	